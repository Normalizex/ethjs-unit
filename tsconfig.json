{
	"compilerOptions": {
	  "target": "es5",
	  "outDir": "dist",
	  "sourceMap": true,
	  "allowJs": true,
	  "declaration": true,
	  "allowSyntheticDefaultImports": true,
	  "esModuleInterop": true,
	  "moduleResolution": "node",
	  "strict": true,
	  "lib": [
		  "es2017"
	  ]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}